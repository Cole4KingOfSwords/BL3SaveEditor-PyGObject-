<Window x:Class="BL3SaveEditor.Debug.DebugConsole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BL3SaveEditor.Debug"
        xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
        mc:Ignorable="d"
        Title="Debug Console" Height="450" Width="450" WindowStyle="ToolWindow"
        >
    <Grid>
        <TextBox Name="textBoxDebug" 
                 ScrollViewer.VerticalScrollBarVisibility="Visible" IsReadOnly="True" IsReadOnlyCaretVisible="True" 
                 TextWrapping="Wrap" AcceptsReturn="True" VerticalContentAlignment="Top" HorizontalContentAlignment="Left"
                 adonisExtensions:CursorSpotlightExtension.RelativeSpotlightSize="0.0">
        </TextBox>
    </Grid>
</Window>
